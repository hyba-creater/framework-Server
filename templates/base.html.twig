<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        
        <!-- Inclure le CSS compilé -->
        {{ encore_entry_link_tags('app') }}
        
        <!-- Lien vers le fichier CSS spécialisé pour la navbar -->
        <link rel="stylesheet" href="{{ asset('css/navbar.css') }}">
        
        {% block stylesheets %}
        {% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
                <a class="navbar-brand" href="{{ path('app_pages') }}">MonSite</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link text-white" href="{{ path('app_pages') }}">Accueil</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="{{ path('app_about') }}">À propos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="{{ path('app_connexion') }}">Connection</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="{{ path('app_inscription') }}">Inscription</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        {% block body %}{% endblock %}

        <!-- Footer commun -->
        <footer style="background-color: #f8f9fa; padding: 20px; text-align: center; border-top: 1px solid #e9ecef; margin-top: 40px;">
            <table style="margin: 0 auto;">
                <tr>
                    <td style="padding: 5px 10px;">Home</td>
                    <td style="padding: 5px 10px;">Pass</td>
                </tr>
                <tr>
                    <td style="padding: 5px 10px;">© Copyright 23</td>
                    <td style="padding: 5px 10px;">About Us</td>
                </tr>
            </table>
        </footer>

        <!-- Inclure le JS compilé -->
        {{ encore_entry_script_tags('app') }}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </body>
</html>